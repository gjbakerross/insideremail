<div class = "container">

<h1 class="display-4 mb-4 mx-auto text-center">New Unsubscribe</h1>

<%= form_with model: @email do |form| %>
    <div class ="form-group">
    <%= form.label :email%>
    <%= form.text_field :email %>
    </div>
     <div class ="form-group">
     <%= form.label "Country"%>
    <%= form.select(:country_id, @country_options) %>
    </div>
  <%= form.submit 'Unsubscribe Customer' :class => "btn btn-primary"%>
<% end %>

<%= link_to 'Back', emails_path %>

</div>
